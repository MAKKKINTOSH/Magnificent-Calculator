<Window x:Class="Magnificent_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magnificent_Calculator"
        mc:Ignorable="d"
        Title="Magnificent Calculator"
        Height="560"
        Width="320"
        Background="">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="CalculatorButton">
            <Setter Property="Background" Value="#ada4e7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#aecdc5"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Button Style="{StaticResource CalculatorButton}" Content="9" Grid.Column="2" Grid.Row="1"/>
            <Button Style="{StaticResource CalculatorButton}" Content="8" Grid.Column="1" Grid.Row="1"/>
            <Button Style="{StaticResource CalculatorButton}" Content="7" Grid.Column="0" Grid.Row="1"/>
            <Button Style="{StaticResource CalculatorButton}" Content="6" Grid.Column="2" Grid.Row="2"/>
            <Button Style="{StaticResource CalculatorButton}" Content="5" Grid.Column="1" Grid.Row="2"/>
            <Button Style="{StaticResource CalculatorButton}" Content="4" Grid.Column="0" Grid.Row="2"/>
            <Button Style="{StaticResource CalculatorButton}" Content="3" Grid.Column="2" Grid.Row="3"/>
            <Button Style="{StaticResource CalculatorButton}" Content="2" Grid.Column="1" Grid.Row="3"/>
            <Button Style="{StaticResource CalculatorButton}" Content="1" Grid.Column="0" Grid.Row="3"/>
            <Button Style="{StaticResource CalculatorButton}" Content="0" Grid.Column="1" Grid.Row="4"/>
        </Grid>
        
    </Grid>
</Window>
